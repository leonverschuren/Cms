{% extends '@OpiferMedia/base.html.twig' %}

{% block opifer_media_title %}
  {{ 'media.edit'|trans({'%name%': media.name}) }}
{% endblock opifer_media_title %}

{% block opifer_media_body %}
  <section class="page-section">
    {% if media.contentType starts with 'image/' %}
      <img src="{{ media.reference|imagine_filter('medialibrary') }}" alt="{{ media.name }}">
    {% else %}
      <i class="fa fa-file fa-4x"></i>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">{{ 'button.submit'|trans }}</button>
    {{ form_end(form) }}
  </section>
{% endblock opifer_media_body %}
